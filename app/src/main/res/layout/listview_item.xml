<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <!--- Este layout("listview_item.xml") , tiene el objetivo de representar cada fila
    de la lista. Esto debido a que en el caso de crear una lista normal, sólo se podría
    ubicar un elemento de texto en cada fila, mientras que los requerimientos de la presente aplicación
    requieren ubicar múltiples elementos.
    Estos textview se dividen en dos tipos, los de tipo "label", que determinan el nombre del elemento
    (por ejemplo, nombre o apellido) y los de tipo text, que almacenan el valor mismo.
    Estos textview están definidos mediante atributos como "layout_toRightOf", o "layout_below",
     utilizados para determinar la posición relativa de cada textview-->
    <TextView
        android:id="@+id/name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre:   "
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/name_label"
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/last_name_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_label"
        android:text="Apellido:   "
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_toRightOf="@+id/last_name_label"
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/birth_date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_label"
        android:text="Fecha de nacimiento:   "
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/birth_date_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/last_name_text"
        android:layout_toRightOf="@+id/birth_date_label"
        android:textColor= "@android:color/black"/>


    <TextView
        android:id="@+id/email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birth_date_label"
        android:text="Email:   "
        android:textColor= "@android:color/black"/>

    <TextView
        android:id="@+id/email_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/birth_date_text"
        android:layout_toRightOf="@+id/email_label"
        android:textColor= "@android:color/black"/>


</RelativeLayout>